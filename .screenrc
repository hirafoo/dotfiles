defencoding utf8
encoding utf8 utf8
bind 'U' eval "encoding utf8" "stuff 'export LANG=en_US.UTF-8\012'"
bind 'E' eval "encoding euc"  "stuff 'export LANG=en_US.EUC-JP\012'"
escape 
