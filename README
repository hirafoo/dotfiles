curl -L http://cpanmin.us/ | perl - App::cpanminus

eval $(/usr/local/bin/perl -I$HOME/perl5/lib/perl5 -Mlocal::lib)
export PERL_CPANM_OPT="--local-lib=~/perl5"
export PATH=/home/USER/perl5/bin:$PATH

# vim configure
./configure --prefix=/usr/local/vim --enable-multibyte --enable-rubyinterp --enable-gpm --enable-cscope --with-features=huge --enable-fontset --disable-gui --without-x --disable-xim --enable-pythoninterp --enable-perlinterp
